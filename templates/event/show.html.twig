{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center site_title">Event</h1>

    <table class="table container table-striped table-bordered table-hover animated fadeIn" style="max-width:90%">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ event.start ? event.start|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ event.end ? event.end|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Min</th>
                <td>{{ event.min }}</td>
            </tr>
            <tr>
                <th>Max</th>
                <td>{{ event.max }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ event.image }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-center">
        <a href="{{ path('event_index') }}" class="btn btn-primary">back to list</a>
        <div class="col-1"></div>
        <a href="{{ path('event_edit', {'id': event.id}) }}" class="btn btn-warning">edit</a>
        <div class="col-1"></div>
        {{ include('event/_delete_form.html.twig') }}
    </div>

{% endblock %}
