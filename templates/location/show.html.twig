{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center site_title">Location</h1>
    
    <table class="table container table-striped table-bordered table-hover animated fadeIn" style="max-width:90%">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>Breedtegraad</th>
                <td>{{ location.breedtegraad }}</td>
            </tr>
            <tr>
                <th>Lengtegraad</th>
                <td>{{ location.lengtegraad }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ location.image }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-center">
        <a href="{{ path('location_index') }}" class="btn btn-primary">back to list</a>
        <div class="col-1"></div>
        <a href="{{ path('location_edit', {'id': location.id}) }}" class="btn btn-warning">edit</a>
        <div class="col-1"></div>
        {{ include('location/_delete_form.html.twig') }}
    </div>
{% endblock %}
